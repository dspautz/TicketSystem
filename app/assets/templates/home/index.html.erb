<header class="row">
  <h1 class="text-center col-md-6 col-md-offset-3">Host-Tastic ºs Ticket System</h1>
</header>

<section class="row" ng-controller="LoginCtrl">
  <form>
    <div class="form-group col-md-6 col-md-offset-3">
      <label class="sr-only">Benutzername</label>
      <input ng-model="formUser.username" name="username" type="text" autofocus class="form-control" placeholder="Username" required>
      
      <label class="sr-only">Passwort</label>
      <input ng-model="formUser.password" name="password" type="password" autofocus class="form-control" placeholder="Your password" required>
    </div>
    <div class="form-group col-md-6 col-md-offset-3 text-left">
      <button ng-click="login(formUser)" class="btn btn-primary"><span class="glyphicon glyphicon-log-in"> </span>Login</button><span>{{message}}</span>
    </div>
  </form>
</section>

<hr/>

<section class="row" ng-controller="TicketCtrl">
  
  <form>
    <div class="form-group col-md-6 col-md-offset-3">
      <label class="sr-only">Name:</label>
      <input ng-model="currentTicket.customerName" type="text" autofocus class="form-control" placeholder="your name" required>
      
      <label class="sr-only">Email:</label>
      <input ng-model="currentTicket.customerEmail" type="email" autofocus class="form-control" placeholder="example@domain.com" required>
      
      <label class="sr-only">Department:</label>
      <input ng-model="currentTicket.customerDepartment" type="text" autofocus class="form-control" placeholder="your department" required>
      
      <label class="sr-only">Subject:</label>
      <input ng-model="currentTicket.subject" type="text" autofocus class="form-control" placeholder="Subject" required>
      
      <label class="sr-only">Issue:</label>
      <textarea ng-model="currentTicket.ticketRequest.report" rows="20" autofocus class="input-large form-control col-lg-4 col-md-4 col-sm-5" placeholder="issue report" required/>
    </div>
    <div class="form-group col-md-6 col-md-offset-3 text-left">
      <button ng-click="create(currentTicket)" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-save"> </span>Create</button><span>{{message}}</span>
    </div>
  </form>
</section>
<hr>